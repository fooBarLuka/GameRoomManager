<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="10dp"
    android:background="#6A2196F3">

    <TextView
        android:id="@+id/console_id_textview_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/first_vertical_guideline_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/first_vertical_guideline_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05" />

    <TextView
        android:id="@+id/console_name_textview_inside_console_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/second_vertical_guideline_id"
        app:layout_constraintStart_toEndOf="@+id/first_vertical_guideline_id"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/second_vertical_guideline_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".3" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/console_spinner_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/third_vertical_guideline_id"
        app:layout_constraintStart_toStartOf="@+id/second_vertical_guideline_id"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/third_vertical_guideline_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".7" />

    <EditText
        android:id="@+id/money_amount_edit_text_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:hint="$"
        app:layout_constraintEnd_toEndOf="@+id/forth_vertical_guideline_id"
        app:layout_constraintStart_toStartOf="@+id/third_vertical_guideline_id" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/forth_vertical_guideline_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".8" />

    <TextView
        android:id="@+id/console_working_textview_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="reserved"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/forth_vertical_guideline_id" />

    <Button
        android:id="@+id/reserve_button_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="reserve"
        android:textSize="9sp"
        android:minWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/forth_vertical_guideline_id" />


</androidx.constraintlayout.widget.ConstraintLayout>